<layout>
    <catalog_category_view>
        <reference name="head">
            <block type="core/template" name="vtiseo.pagination" template="vtiseo/category/pagination.phtml" />
        </reference>
    </catalog_category_view>

    <catalog_category_layered>
        <reference name="head">
            <block type="core/template" name="vtiseo.pagination" template="vtiseo/category/pagination.phtml" />
        </reference>
    </catalog_category_layered>

    <cms_page>
        <reference name="head">
            <block type="vtiseocore/page_html_head_cmscanonical" name="vtiseo.cmscanonical">
                <action method="setTemplate" ifconfig="vtiseocore/defaultseo/enablecmscanonical">
                    <template>vtiseo/page/html/head/cmscanonical.phtml</template>
                </action>
            </block>
        </reference>
    </cms_page>
</layout>