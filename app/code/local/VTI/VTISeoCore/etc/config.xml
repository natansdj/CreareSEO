<?xml version="1.0"?>
<config>
    <modules>
        <VTI_VTISeoCore>
            <version>1.0.0</version>
        </VTI_VTISeoCore>
    </modules>
    <adminhtml>
        <layout>
            <updates>
                <vtiseocore>
                    <file>vtiseo_admin.xml</file>
                </vtiseocore>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <vtiseocore>
                    <file>vtiseo.xml</file>
                </vtiseocore>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <vtiseo before="Mage_Adminhtml">VTI_VTISeoCore_Adminhtml</vtiseo>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <!--<eav_attributes>-->
        <!--<catalog_product>-->
        <!--<name>-->
        <!--<code>name</code>-->
        <!--<locked_fields>-->
        <!--<is_unique/>-->
        <!--</locked_fields>-->
        <!--</name>-->
        <!--</catalog_product>-->
        <!--</eav_attributes>-->
        <models>
            <vtiseocore>
                <class>VTI_VTISeoCore_Model</class>
                <resourceModel>cleanup_mysql4</resourceModel>
            </vtiseocore>
        </models>
        <helpers>
            <vtiseocore>
                <class>VTI_VTISeoCore_Helper</class>
            </vtiseocore>
        </helpers>
        <blocks>
            <vtiseocore>
                <class>VTI_VTISeoCore_Block</class>
            </vtiseocore>
        </blocks>
        <resources>
            <vtiseo_setup>
                <setup>
                    <module>VTI_VTISeoCore</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vtiseo_setup>
        </resources>
    </global>
    <frontend>
        <events>
            <controller_action_layout_generate_xml_before>
                <observers>
                    <noindex>
                        <type>singleton</type>
                        <class>vtiseocore/observer</class>
                        <method>changeRobots</method>
                    </noindex>
                </observers>
            </controller_action_layout_generate_xml_before>
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <settitle>
                        <type>singleton</type>
                        <class>vtiseocore/observer</class>
                        <method>setTitle</method>
                    </settitle>
                    <setdescription>
                        <type>singleton</type>
                        <class>vtiseocore/observer</class>
                        <method>setDescription</method>
                    </setdescription>
                </observers>
            </controller_action_layout_generate_blocks_after>
        </events>
    </frontend>
    <default>
        <vtiseocore>
            <defaultseo>
                <noindexparams>0</noindexparams>
                <noindexparamssearch>0</noindexparamssearch>
                <noindexparamsparameterpages>0</noindexparamsparameterpages>
                <category_h1>0</category_h1>
                <enablecmscanonical>0</enablecmscanonical>
                <cms_canonical_protocol>https://</cms_canonical_protocol>
                <cms_canonical_slashes>0</cms_canonical_slashes>
            </defaultseo>
        </vtiseocore>
    </default>
</config>
